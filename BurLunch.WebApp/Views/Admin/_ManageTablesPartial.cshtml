@model IEnumerable<BurLunch.AuthAPI.Models.Table>

<h4>Список столов</h4>
<table class="table">
    <thead>
        <tr>
            <th>Описание</th>
            <th>Количество мест</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var table in Model)
            {
                <tr>
                    <td>@table.Description</td>
                    <td>@table.Seats</td>
                    <td>
                        <button class="btn btn-danger btn-sm" onclick="deleteTable(@table.Id)">Удалить</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Нет данных для отображения</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function deleteTable(id) {
        if (confirm('Вы уверены, что хотите удалить стол?')) {
            fetch(`/Admin/DeleteTable/${id}`, { method: 'DELETE' })
                .then(response => {
                    if (response.ok) {
                        alert('Стол успешно удален');
                        location.reload();
                    } else {
                        alert('Ошибка при удалении стола');
                    }
                });
        }
    }
</script>
