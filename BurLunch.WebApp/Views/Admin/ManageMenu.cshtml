@{
    ViewData["Title"] = "Управление меню";
}

<h2 class="text-center" style="color: #CE0E2D;">Управление меню</h2>

<div class="d-flex flex-wrap gap-3 justify-content-center">
    <!-- Блок управления блюдами -->
    <div class="card menu-card">
        <div class="card-body d-flex flex-column align-items-center text-center">
            <h5 class="card-title">Управление блюдами</h5>
            <p class="card-text">Добавляйте и удаляйте столы для ресторана.</p>
            <a asp-action="ManageDishes" asp-controller="Admin" class="btn btn-primary mt-auto">
                Управлять блюдами
            </a>
        </div>
    </div>
    <!-- Блок управления недельным меню -->
    <div class="card menu-card">
        <div class="card-body d-flex flex-column align-items-center text-center">
            <h5 class="card-title">Управление недельным меню</h5>
            <p class="card-text">Создавайте и управляйте бизнес-ланчами.</p>
            <a asp-action="ManageWeeklyMenu" asp-controller="Admin" class="btn btn-primary mt-auto">
                Управлять недельным меню
            </a>
        </div>
    </div>
    <!-- Блок управления столами -->
    <div class="card menu-card">
        <div class="card-body d-flex flex-column align-items-center text-center">
            <h5 class="card-title">Управление столами</h5>
            <p class="card-text">Добавляйте, редактируйте или удаляйте столы.</p>
            <a asp-action="ManageTables" asp-controller="Admin" class="btn btn-primary mt-auto">
                Управлять столами
            </a>
        </div>
    </div>
    <!-- Новый блок: Управление расписанием бизнес-ланчей -->
    <div class="card menu-card">
        <div class="card-body d-flex flex-column align-items-center text-center">
            <h5 class="card-title">Управление расписанием</h5>
            <p class="card-text">Составляйте расписание бизнес-ланчей.</p>
            <a asp-action="ManageSchedule" asp-controller="Admin" class="btn btn-primary mt-auto">
                Управлять расписанием
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    .menu-card {
        width: 18rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .menu-card .card-body {
        height: 100%;
    }

    .menu-card h5 {
        color: #CE0E2D;
    }

    .btn-primary {
        background-color: #CE0E2D;
        border-color: #CE0E2D;
    }

    .btn-primary:hover {
        background-color: #A10D20;
        border-color: #A10D20;
    }
</style>
